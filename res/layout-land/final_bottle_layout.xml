<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <AbsoluteLayout
        android:layout_width="194dp"
        android:layout_height="248dp"
        android:layout_x="44dp"
        android:layout_y="12dp"
        android:background="@drawable/bottle_background_original" >

        <ImageView
            android:id="@+id/final_bottle_top_imageView1"
            android:layout_width="138dp"
            android:layout_height="82dp"
            android:layout_x="25dp"
            android:layout_y="11dp"
            android:src="@drawable/loading" />

        <AbsoluteLayout
            android:layout_width="188dp"
            android:layout_height="47dp"
            android:layout_x="2dp"
            android:layout_y="199dp"
            android:background="#d6d6d6" >

            <ImageView
                android:id="@+id/final_bottle_bottle_imageView1"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_x="2dp"
                android:layout_y="4dp"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/botl_002_sm" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="37dp"
                android:layout_y="6dp"
                android:src="@drawable/seprator" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="52dp"
                android:layout_y="10dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/final_bottle_likes_value_textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="likes"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="81dp"
                android:layout_y="4dp"
                android:src="@drawable/seprator" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="94dp"
                android:layout_y="8dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eye" />

                <TextView
                    android:id="@+id/final_bottle_views_value_textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="views"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="128dp"
                android:layout_y="5dp"
                android:src="@drawable/seprator" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="138dp"
                android:layout_y="8dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boat" />

                <TextView
                    android:id="@+id/final_bottle_miles_value_textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55555"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="miles"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>
        </AbsoluteLayout>

        <TextView
            android:id="@+id/final_bottle_realname_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="41dp"
            android:layout_y="140dp"
            android:text="Real Name"
            android:textColor="@color/black"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/final_bottle_username_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="41dp"
            android:layout_y="154dp"
            android:text="UserName"
            android:textColor="@color/black"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/final_bottle_datemsg_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="8dp"
            android:layout_y="177dp"
            android:lines="2"
            android:text="rebotled on a day ago by bottle king"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="bold"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/final_bottle_avatar_imageView1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_x="10dp"
            android:layout_y="140dp"
            android:src="@drawable/bottle_img" />

        <TextView
            android:id="@+id/final_bottle_title_textView1"
            android:layout_width="194dp"
            android:layout_height="24dp"
            android:layout_x="-1dp"
            android:layout_y="98dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="8dp"
            android:textStyle="normal" />

    </AbsoluteLayout>

    <AbsoluteLayout
        android:id="@+id/final_bottle_pattern_img_abosolutelayout"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_x="35dp"
        android:layout_y="259dp"
        android:background="@drawable/pattern_001" >

    </AbsoluteLayout>

</AbsoluteLayout>