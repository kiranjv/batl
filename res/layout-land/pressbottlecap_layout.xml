<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/headder_layout"
        android:gravity="center" />

    <ImageView
        android:id="@+id/presscap_messageimg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/botlmessage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.27" >

        <ImageView
            android:id="@+id/presscap_bottlebutton"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottlecap_unclick" />

        <TextView
            android:id="@+id/pressbottle_opentext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presscap_bottlebutton"
            android:layout_centerHorizontal="true"
            android:text="Open Botls"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#f8f8f8"
            android:textSize="15dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer"
        android:gravity="center"
        android:scaleType="fitXY" />

    <!--
         <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/fottler_layout"
       
        android:layout_gravity="bottom" />
    -->

</LinearLayout>