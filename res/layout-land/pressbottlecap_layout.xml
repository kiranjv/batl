<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

   <include
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    layout="@layout/headder_layout" />

    <ImageView
        android:id="@+id/presscap_messageimg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:src="@drawable/botlmessage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.27" >

        <ImageView
            android:id="@+id/presscap_bottlebutton"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/bottlecap_unclick" />

        <TextView
            android:id="@+id/pressbottle_opentext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presscap_bottlebutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Open Botls"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#f8f8f8"
            android:textSize="18dp" />

    </RelativeLayout>

<ImageView
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/footer"
    android:gravity="center"
    android:scaleType="fitXY" />
	
	<!-- <include
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    layout="@layout/fottler_layout" /> -->

</LinearLayout>